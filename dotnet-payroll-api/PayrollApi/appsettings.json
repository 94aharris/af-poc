{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Identity": "Information",
      "PayrollApi": "Information"
    }
  },
  "AllowedHosts": "*",
  "Auth": {
    "RequireAuthentication": false
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "",
    "ClientId": "",
    "Audience": "",
    "TokenValidation": {
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true,
      "AcceptBothV1AndV2Tokens": true
    }
  },
  "ApiConfiguration": {
    "ServiceName": "Payroll API",
    "Version": "1.0.0",
    "Description": "Secure payroll API with OBO (On-Behalf-Of) flow support",
    "HttpPort": 5100,
    "HttpsPort": 5101
  }
}
