# Azure AD Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-orchestrator-client-id
AZURE_CLIENT_SECRET=your-orchestrator-client-secret

# JWT Configuration
JWT_AUDIENCE=api://orchestrator-api-id
JWT_ISSUER=https://login.microsoftonline.com/{tenant-id}/v2.0
JWT_ALGORITHM=RS256

# Sub-Agent Endpoints
PYTHON_AGENT_URL=http://localhost:8000
DOTNET_AGENT_URL=http://localhost:5000

# OBO Scopes for sub-agents
# These are the App ID URIs of your sub-agent registrations
PYTHON_AGENT_SCOPES=["api://python-agent-id/.default"]
DOTNET_AGENT_SCOPES=["api://dotnet-agent-id/.default"]

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Enable/Disable Authentication (for testing without Azure AD)
REQUIRE_AUTH=false
